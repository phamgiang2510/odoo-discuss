<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="mail.MessageActionList" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('o_MessageActionList_actionReply')]" position="after">
            <span t-if="messageActionList.message.canBeForwarded"
                  class="o_MessageActionList_action o_MessageActionList_actionForward p-2 fa fa-lg fa-share" title="Forward"
                  role="button" tabindex="0" aria-label="Reply" t-on-click="messageActionList.onClickForward"/>
        </xpath>
        <xpath expr="//DeleteMessageConfirmDialog" position="before">
            <ForwardMessageDialog t-if="messageActionList.showForwardPopup" messageActionListLocalId="messageActionList.localId"/>
        </xpath>
    </t>

</templates>
